<Application x:Class="TelegramBot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TelegramBot.ViewModels"
             StartupUri="Views/Window/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Style/Border/BordersStyles.xaml" />
                <ResourceDictionary Source="Resources/Style/ListView/ListViewStyle.xaml" />
                <ResourceDictionary Source="Resources/Colors/MainBrushes.xaml" />
                <ResourceDictionary Source="Resources/Style/TextBox/TextBoxStyle.xaml" />
                <ResourceDictionary Source="Resources/Style/Button/ButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator" />
        </ResourceDictionary>
    </Application.Resources>
</Application>